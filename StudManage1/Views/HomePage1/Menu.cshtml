
@{ ViewBag.Title = "Menu"; }

<style>
    div.w3-col {
        display: flex;
        padding: 25px;
        text-align: center;
    }

    img {
        width: 180px;
        height: 200px
    }

    a.option {
        border: 1px hidden gray;
        /*border-style: groove;*/
        margin: 20px;
        transition: transform .2s;
        /*background-color: lightgrey;*/
    }

    a:hover {
        transform: scale(1.3);
    }
    #blink {
        font-size: 30px;
        font-weight: bold;
        font-family: sans-serif;
        color: #1c87c9;
        transition: 0.01s;
    }
   
</style>

<h2>Menu</h2>


<p id="blink" style="color:darkred; background-color:chartreuse">ADMISSIONS OPEN NOW!!!</p>


