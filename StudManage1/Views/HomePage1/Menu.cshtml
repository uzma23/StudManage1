            <img src="https://cdn-icons-png.flaticon.com/512/15/15659.png">
            <p><b>About  Us</b></p>
        </div>
    </a>
    <a class="option" href="~/HomePage1/calendar">
        <div class="w3-container">
            <img src="https://thumbs.dreamstime.com/b/news-icon-vector-sign-symbol-isolated-white-background-news-logo-concept-news-icon-vector-isolated-white-background-133757525.jpg">
            <p><b>CALENDER</b></p>
        </div>
    </a>
    <a class="option" href="~/HomePage1/Album">
        <div class="w3-container">
            <img src="https://www.freeiconspng.com/uploads/photography-icon-png-0.png">
            <p><b>Gallery</b></p>
        </div>
    </a>
    <a class="option" href="~/Placement/Companies">
